<resources>
    <!-- Base application theme. -->
    <style name="res_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0277BD</item>
        <item name="colorPrimaryDark">#004C8C</item>
        <item name="colorAccent">#0277BD</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorPrimaryVariant">#004C8C</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#9E9E9E</item>
        <item name="colorSecondaryVariant">#707070</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="colorOnBackground">#212121</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="res_OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>


    <style name="res_FullscreenTheme" parent="res_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="res_TranslucentTheme" parent="res_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/res_color_00000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
</resources>