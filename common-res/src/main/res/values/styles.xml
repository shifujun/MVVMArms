<resources>
    <!-- Base application theme. -->
    <style name="res_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/res_colorPrimary</item>
        <item name="colorPrimaryDark">@color/res_colorPrimaryDark</item>
        <item name="colorAccent">@color/res_colorAccent</item>
    </style>

    <style name="res_OnClick">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>


    <style name="res_FullscreenTheme" parent="res_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="res_TranslucentTheme" parent="res_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/res_color_00000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <!-- 对话框默认主题 -->
    <style name="res_BaseDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert"><!-- @android:style/Theme.Dialog -->
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮在 Activity 之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/res_transparent</item>
        <!-- 遮盖层 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 动画效果 -->
        <item name="android:windowEnterAnimation">@anim/res_window_scale_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_scale_out</item>
        <!-- Base.Theme.AppCompat.Light.Dialog.Alert 特有的属性，用于指定默认宽度，这里需要禁用 -->
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
        <!-- 解决 ActionBar 占位导致 Dialog 无法全屏显示的问题 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- ActionMode 覆盖 Actionbar，不顶下来 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 不感知敏感的切换 -->
        <!--<item name="android:configChanges">orientation|screenSize|keyboardHidden</item>-->
        <!-- 默认隐藏输入法 -->
        <!--<item name="android:windowSoftInputMode">stateHidden</item>-->
        <!-- Dialog 全屏显示 -->
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <!-- 缩放动画 -->
    <style name="res_ScaleAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_scale_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_scale_out</item>
    </style>

    <!-- ios 动画 -->
    <style name="res_IOSAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_ios_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_ios_out</item>
    </style>

    <!-- 顶部弹出动画 -->
    <style name="res_TopAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_top_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_top_out</item>
    </style>

    <!-- 底部弹出动画 -->
    <style name="res_BottomAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_bottom_out</item>
    </style>

    <!-- 左边弹出动画 -->
    <style name="res_LeftAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_left_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_left_out</item>
    </style>

    <!-- 右边弹出动画 -->
    <style name="res_RightAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/res_window_right_in</item>
        <item name="android:windowExitAnimation">@anim/res_window_right_out</item>
    </style>


</resources>